<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SimpleIdServer.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SimpleIdServer.Mobile"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Enroll">
            <ShellContent
                Title="Enroll"
                ContentTemplate="{DataTemplate local:EnrollPage}"
                Route="enroll" />
        </Tab>
        <Tab Title="Wallet">
            <ShellContent
                Title="Wallet"
                ContentTemplate="{DataTemplate local:WalletPage}"
                Route="wallet" />
        </Tab>
        <Tab Title="Settings">
            <ShellContent 
                Title="Settings"
                ContentTemplate="{DataTemplate local:SettingsPage}"
                Route="settings" />
        </Tab>
    </TabBar>
</Shell>
