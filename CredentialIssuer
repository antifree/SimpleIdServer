FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS runtime

COPY build/results/docker/CredentialIssuer/ App/
COPY compose/certificates/ certificates/
COPY compose/certificates/ca.cer usr/local/share/ca-certificates/ca.cer

RUN update-ca-certificates

WORKDIR /App

ENTRYPOINT ["dotnet", "SimpleIdServer.CredentialIssuer.Startup.dll"]